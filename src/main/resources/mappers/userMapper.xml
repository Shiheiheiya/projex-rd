<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dbly.ssm.dao.IUserDAO">

    <insert id="addUser" parameterType="com.dbly.ssm.entity.User">
        INSERT INTO user
        VALUES(null, #{username}, #{pwd}, #{phone}, #{email}, default)
    </insert>

    <select id="findUserByName" parameterType="com.dbly.ssm.entity.User" resultType="com.dbly.ssm.entity.User">
        select * from user where username=#{username} and pwd=#{pwd}
    </select>

    <select id="findAllUsers" resultType="com.dbly.ssm.entity.User">
        SELECT id, username, pwd, phone, email, author FROM user
    </select>

    <select id="findUserById" resultType="com.dbly.ssm.entity.User" parameterType="int">
        SELECT id, username, pwd, phone, email, author FROM user where id=#{id}
    </select>

    <select id="updateUser" parameterType="com.dbly.ssm.entity.User">
        UPDATE user set username=#{username}, phone=#{phone}, email=#{email}, author=#{author} where id=#{id}
    </select>

    <select id="deleteUser" parameterType="int">
        DELETE FROM USER WHERE id=#{id}
    </select>
</mapper>